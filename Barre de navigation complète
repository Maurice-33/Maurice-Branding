<!-- Copiez et collez cette partie à la fin de votre fichier HTML, juste avant la balise </body> -->
<script>
    // Gère le changement de couleur du header au défilement
    const header = document.getElementById('main-header');
    window.addEventListener("scroll", () => {
        if (window.scrollY > 50) {
            header.classList.add('scrolled');
        } else {
            header.classList.remove('scrolled');
        }
    });

    // Gère l'ouverture et la fermeture du menu hamburger sur mobile
    const hamburger = document.querySelector('.hamburger-menu');
    const navMenu = document.querySelector('.btn-group');
    hamburger.addEventListener('click', () => {
        hamburger.classList.toggle('is-active');
        navMenu.classList.toggle('is-open');
    });

    // Ferme le menu si un lien est cliqué
    navMenu.addEventListener('click', () => {
        hamburger.classList.remove('is-active');
        navMenu.classList.remove('is-open');
    });
</script>
